<h1 class="text-danger"><%= @place.name %></h1>

<% if @current_user %>

<p>
  <a class="btn btn-success" href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>


<h2>My Posts</h2>

<div class="row">
  <% for post in @place.posts.where({ user_id: @current_user.id }) %>
  <div class="col-sm-4">
  <h3><%= post.title %></h3>
  <h4><%= post.posted_on %></h4>
  <% if post.uploaded_image.attached? %>
  <p><img src="<%= url_for(post.uploaded_image) %>" class="img-fluid"></p>
  <% end %>
  <p><%= post.description %></p>



  </div>
  <% end %>
</div>





<% end %>

<p>
  <a href="/places">Back to All Places</a>
</p>